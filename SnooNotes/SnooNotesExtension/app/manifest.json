{  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "0.0.0",
  "key": "",
  "manifest_version": 2,
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "__MSG_browserActionTitle__",
    "default_popup": "pages/popup.html"
  },
  "options_page": "pages/options.html",
  "options_ui": {
    "page": "pages/options.html",
    "chrome_style": true
  },
  "web_accessible_resources": [
    "fonts/*.woff2"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.reddit.com/*"
      ],
      "exclude_matches":["http://localhost:5001/*","http://localhost:5000/*"],
      "css": [
        "styles/contentscript.css"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches":[
        "http://localhost:5000/Auth/redux_callback.html", "http://localhost:5000/Auth/redux_silent_renew.html"
      ],
      "js":[
        "scripts/signinCallback.js"
      ],"all_frames": true
    }
  ],
  "permissions": [
    "tabs","identity","storage","unlimitedStorage","cookies",
    "http://fonts.googleapis.com/",
    "https://fonts.googleapis.com/",
    "<all_urls>"
  ]
}

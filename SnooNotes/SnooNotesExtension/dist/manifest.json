{
  "manifest_version": 2,
  "name": "SnooNotes",
  "version": "2.0.0",
  "version_name": "Caboose",
  "author": "Meepster23",
  "description": "Usernotes plus a whole lot more!",
  "content_scripts": [
    {
      "matches": [
        "*://*.reddit.com/*"
      ],
      "exclude_matches": [ "*://*.reddit.com/api/v1/authorize*", "*://*.reddit.com/login*" ],
      "js": ["SnooNotes.js"]
    }
  ],
  "permissions": [
    "tabs",
    "contextMenus",
    "https://snoonotes.com/*",
    "http://reddit.com/*",
    "https://reddit.com/*",
    "http://*.reddit.com/*",
    "https://*.reddit.com/*"
  ]
}
